<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivAllBillsEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:src="@mipmap/icon_empty_float"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAllBillsHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/width_7dp"
        android:text="暂无推荐产品"
        android:textColor="@color/color_666666"
        android:textSize="15.5sp"
        app:layout_constraintEnd_toEndOf="@+id/ivAllBillsEmpty"
        app:layout_constraintStart_toStartOf="@+id/ivAllBillsEmpty"
        app:layout_constraintTop_toBottomOf="@id/ivAllBillsEmpty" />

</androidx.constraintlayout.widget.ConstraintLayout>