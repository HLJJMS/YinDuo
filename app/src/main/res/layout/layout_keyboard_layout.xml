<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bfbebd" />



        <RelativeLayout
            android:id="@+id/keyboardHideImage"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="#fff">
            <TextView
                android:textSize="13sp"
                android:layout_centerInParent="true"
                android:text="@string/input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="32dp"
                android:background="#fff"
                android:src="@mipmap/key_cancel_down_arraw" />
        </RelativeLayout>

        <com.yinduowang.installment.app.widget.keyboard.CustomKeyboardView
            android:id="@+id/keyboardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:keyBackground="@drawable/bg_keyboardview"
            android:keyPreviewOffset="0dp"
            android:keyTextColor="#282828"
            android:keyTextSize="14sp"
            android:shadowColor="#eee"
            android:shadowRadius="0.0" />

    </LinearLayout>

</RelativeLayout>
