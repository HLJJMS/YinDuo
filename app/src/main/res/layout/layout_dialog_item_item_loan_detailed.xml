<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/const_detailed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F9F9F9"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/width_13dp"
        android:text="本期本金"
        android:textColor="@color/color_9A9A9A"
        android:textSize="@dimen/size_13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_principa_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/size_13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_principal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_principal"
        tool:text="158.33元" />

    <View
        android:id="@+id/holderView"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="@dimen/width_13dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_principal" />

</androidx.constraintlayout.widget.ConstraintLayout>

