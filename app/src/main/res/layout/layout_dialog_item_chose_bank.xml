<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/white"
android:orientation="vertical">

  <TextView
      android:id="@+id/tv_bank_card"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="19dp"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="15dp"
      android:text="建设银行(7980)"
      android:textColor="@color/color_333333"
      android:textSize="@dimen/size_14sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <View
      android:id="@+id/view12"
      android:layout_width="0dp"
      android:layout_height="0.5dp"
      android:background="@color/color_EAEAEA"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/tv_bank_card" />

  <ImageView
      android:id="@+id/iv_default_mark"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="18dp"
      app:layout_constraintBottom_toBottomOf="@+id/tv_bank_card"
      app:layout_constraintEnd_toEndOf="parent"
      android:visibility="gone"
      app:layout_constraintTop_toTopOf="@+id/tv_bank_card"
      app:srcCompat="@mipmap/ic_bank_card_mark" />
</androidx.constraintlayout.widget.ConstraintLayout>