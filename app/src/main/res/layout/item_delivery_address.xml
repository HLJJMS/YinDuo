<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:background="@color/color_EAEAEA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_back_time" />

    <TextView
        android:id="@+id/tv_pay_back_style"
        android:layout_width="@dimen/width_67dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_16sp"
        android:singleLine="true"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="小银号多啊" />

    <TextView
        android:id="@+id/tv_pay_back_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pay_back_style"
        app:layout_constraintStart_toEndOf="@+id/tv_pay_back_style"
        app:layout_constraintTop_toTopOf="@+id/tv_pay_back_style"
        tools:text="137****6377" />

    <TextView
        android:id="@+id/tv_pay_back_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="@dimen/width_30dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_12sp"
        app:layout_constraintEnd_toStartOf="@+id/ivEditAddress"
        app:layout_constraintStart_toStartOf="@+id/tv_pay_back_style"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_back_style"
        tools:text="黑龙江哈尔滨市南岗区城区 嵩山路166-5小银号网嵩山路小银号网嵩山路166-5小银号网网嵩山路小银号网嵩山路166-5小银号网" />

    <ImageView
        android:id="@+id/ivEditAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/width_35dp"
        android:padding="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pay_back_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_edit_address" />

    <TextView
        android:id="@+id/tv_loan_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/default_delivery_addr"
        android:paddingStart="@dimen/width_2dp"
        android:paddingTop="1dp"
        android:paddingEnd="@dimen/width_2dp"
        android:paddingBottom="1dp"
        android:text="默认"
        android:textColor="@color/white"
        android:textSize="@dimen/size_10sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pay_back_money"
        app:layout_constraintStart_toEndOf="@+id/tv_pay_back_money"
        app:layout_constraintTop_toTopOf="@+id/tv_pay_back_money" />
</androidx.constraintlayout.widget.ConstraintLayout>
