                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_25dp"
                android:layout_marginBottom="@dimen/width_32dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/width_25dp"
                    android:layout_height="@dimen/width_25dp"
                    android:background="@mipmap/ic_vip_shopping" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="@dimen/width_35dp"
                    android:text="商城分期购物"
                    android:textColor="#ff444444"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="@dimen/width_25dp"
                    android:layout_height="@dimen/width_25dp"
                    android:background="@mipmap/ic_vip_loan" />

                <TextView
