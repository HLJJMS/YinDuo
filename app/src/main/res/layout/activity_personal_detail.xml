<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.yinduowang.installment.app.widget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height" />



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_30dp"
                android:background="@color/color_0DFF7213"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/width_17dp"
                android:text="@string/please_make_sure_it_is_correct"
                android:textColor="@color/color_FF7213"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_17dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/identity_card"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />


                <ImageView
                    android:id="@+id/ivIdCard"
                    android:layout_width="@dimen/width_42dp"
                    android:layout_height="@dimen/width_26dp"
                    android:layout_marginEnd="@dimen/width_10dp"
                    android:src="@mipmap/ic_default_idcard_z" />

                <ImageView
                    android:id="@+id/ivIdCardTwo"
                    android:layout_width="@dimen/width_42dp"
                    android:layout_height="@dimen/width_26dp"
                    android:src="@mipmap/ic_default_idcard_f" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/width_4dp"
                    android:paddingEnd="@dimen/width_12dp"
                    android:src="@drawable/ic_chevron_right_two" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_17dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/person_u_face"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />

                <ImageView
                    android:id="@+id/ivFace"
                    android:layout_width="@dimen/width_42dp"
                    android:layout_height="@dimen/width_26dp"
                    android:src="@mipmap/ic_default_face" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/width_4dp"
                    android:paddingEnd="@dimen/width_12dp"
                    android:src="@drawable/ic_chevron_right_two" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_10dp"
                android:background="@color/color_F6F6F6" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_54dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/person_name"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/tvCardName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:hint="@string/please_fill_name"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_D0D0D0"
                    android:textSize="@dimen/size_14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/width_4dp"
                    android:paddingEnd="@dimen/width_12dp"
                    android:src="@drawable/ic_chevron_right_two"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_x5dp"
                android:layout_marginStart="@dimen/width_17dp"
                android:layout_marginEnd="@dimen/width_17dp"
                android:background="@color/color_EAEAEA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_54dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/person_id"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/tvCardNumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:hint="@string/please_fill_id"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_D0D0D0"
                    android:textSize="@dimen/size_14sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/width_4dp"
                    android:paddingEnd="@dimen/width_12dp"
                    android:src="@drawable/ic_chevron_right_two"
                    android:visibility="invisible" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_10dp"
                android:background="@color/color_F6F6F6" />



            <LinearLayout
                android:id="@+id/llDegree"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_17dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/education"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/tvDegree"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:hint="@string/please_choose"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_D0D0D0"
                    android:textSize="@dimen/size_14sp" />


                <ImageView
                    android:id="@+id/ivDegree"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/width_4dp"
                    android:paddingEnd="@dimen/width_12dp"
                    android:src="@drawable/ic_chevron_right_two" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_x5dp"
                android:layout_marginStart="@dimen/width_17dp"
                android:layout_marginEnd="@dimen/width_17dp"
                android:background="@color/color_EAEAEA" />


            <LinearLayout
                android:id="@+id/llHomeArea"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/current_address"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/tvHomeArea"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:hint="@string/please_choose"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_D0D0D0"
                    android:textSize="@dimen/size_14sp" />

                <ImageView
                    android:id="@+id/ivHomeArea"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/width_4dp"
                    android:paddingEnd="@dimen/width_12dp"
                    android:src="@drawable/ic_chevron_right_two" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_x5dp"
                android:layout_marginStart="@dimen/width_17dp"
                android:layout_marginEnd="@dimen/width_17dp"
                android:background="@color/color_EAEAEA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/detailed_address"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />

                <EditText
                    android:id="@+id/etHomeAddress"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:background="@null"
                    android:layout_marginLeft="60dp"
                    android:maxLines="1"
                    android:gravity="center_vertical|right"
                    android:hint="请填写详细街道和门牌号"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_D0D0D0"
                    android:textSize="@dimen/size_14sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/width_4dp"
                    android:paddingEnd="@dimen/width_12dp"
                    android:src="@drawable/ic_chevron_right_two"
                    android:visibility="invisible" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_10dp"
                android:background="@color/color_F6F6F6" />
            <LinearLayout
                android:id="@+id/llLiveTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_17dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/length_of_residence"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/tvLiveTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:hint="@string/please_choose"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_D0D0D0"
                    android:textSize="@dimen/size_14sp" />

                <ImageView
                    android:id="@+id/ivLiveTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/width_4dp"
                    android:paddingEnd="@dimen/width_12dp"
                    android:src="@drawable/ic_chevron_right_two" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_x5dp"
                android:layout_marginStart="@dimen/width_17dp"
                android:layout_marginEnd="@dimen/width_17dp"
                android:background="@color/color_EAEAEA" />

            <LinearLayout
                android:id="@+id/llMarriage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/marital_status"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/size_14sp" />


                <TextView
                    android:id="@+id/tvMarriage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:hint="@string/please_choose"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_D0D0D0"
                    android:textSize="@dimen/size_14sp" />

                <ImageView
                    android:id="@+id/ivMarriage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/width_4dp"
                    android:paddingEnd="@dimen/width_12dp"
                    android:src="@drawable/ic_chevron_right_two" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_x5dp"
                android:layout_marginStart="@dimen/width_17dp"
                android:layout_marginEnd="@dimen/width_17dp"
                android:background="@color/color_EAEAEA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_F6F6F6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBtn"
                    style="@style/text_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_45dp"
                    android:layout_marginLeft="@dimen/width_20dp"
                    android:layout_marginTop="@dimen/width_30dp"
                    android:layout_marginRight="@dimen/width_20dp"
                    android:enabled="false"
                    android:text="@string/save"
                    android:textSize="@dimen/size_16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/width_16dp"
                    android:layout_marginBottom="@dimen/width_39dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/width_12dp"
                        android:layout_height="@dimen/width_15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_security" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="@string/bank_level_data_encryption_service"
                        android:textColor="@color/color_9A9A9A"
                        android:textSize="13sp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
