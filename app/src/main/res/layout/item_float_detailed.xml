<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tool="http://schemas.android.com/tools">

 <ImageView
     android:id="@+id/iv_yinliu_top"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/width_24dp"
     android:layout_marginBottom="@dimen/width_12dp"
     android:visibility="gone"
     android:src="@mipmap/icon_yinliu_top" />

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

     <ImageView
         android:id="@+id/iv_title"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_marginStart="22dp"
         android:layout_marginLeft="22dp"
         android:layout_marginTop="18dp"
         android:scaleType="fitXY"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:srcCompat="@mipmap/ic_yinliu" />

     <TextView
         android:id="@+id/tv_title"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="14dp"
         android:layout_marginLeft="14dp"
         android:layout_marginTop="@dimen/width_1dp"
         android:layout_marginEnd="31dp"
         android:layout_marginRight="31dp"
         android:ellipsize="end"
         android:lines="1"
         android:textColor="@color/color_333333"
         android:textSize="15sp"
         android:textStyle="bold"
         app:layout_constraintEnd_toStartOf="@+id/tv_apply_now"
         app:layout_constraintStart_toEndOf="@+id/iv_title"
         app:layout_constraintTop_toTopOf="@+id/iv_title"
         tool:text="今日钱包" />

     <TextView
         android:id="@+id/tv_title_two"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:ellipsize="end"
         android:lines="1"
         android:text="超长贷期30天，10万10万额度等你拿你拿10万额度等你拿你拿10万额度等你拿你拿10万额度等你拿你拿10万额度等你拿你拿额度等你拿你拿"
         android:textColor="@color/color_999999"
         android:textSize="10sp"
         android:visibility="gone"
         app:layout_constraintBottom_toBottomOf="@+id/iv_title"
         app:layout_constraintEnd_toEndOf="@+id/tv_title"
         app:layout_constraintStart_toStartOf="@+id/tv_title"
         app:layout_constraintTop_toBottomOf="@+id/tv_title"
         app:layout_constraintVertical_chainStyle="spread_inside" />


     <TextView
         android:id="@+id/textView7"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/width_4dp"
         android:text="已有"
         android:textColor="@color/color_808080"
         android:textSize="12sp"
         app:layout_constraintStart_toStartOf="@+id/tv_title"
         app:layout_constraintTop_toBottomOf="@+id/tv_title" />

     <TextView
         android:id="@+id/tv_number_applicants"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="44555"
         android:textColor="@color/colorAccent"
         android:textSize="12sp"
         app:layout_constraintBottom_toBottomOf="@+id/textView7"
         app:layout_constraintStart_toEndOf="@+id/textView7"
         app:layout_constraintTop_toTopOf="@+id/textView7" />

     <TextView
         android:id="@+id/textView8"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="人申请"
         android:textColor="@color/color_808080"
         android:textSize="12sp"
         app:layout_constraintBottom_toBottomOf="@+id/tv_number_applicants"
         app:layout_constraintStart_toEndOf="@+id/tv_number_applicants"
         app:layout_constraintTop_toTopOf="@+id/tv_number_applicants" />

     <TextView
         android:id="@+id/tv_apply_now"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="6dp"
         android:background="@drawable/shape_applay_radius_14"
         android:gravity="center"
         android:paddingLeft="@dimen/width_16dp"
         android:paddingTop="@dimen/width_6dp"
         android:paddingRight="@dimen/width_16dp"
         android:paddingBottom="@dimen/width_6dp"
         android:textStyle="bold"
         android:text="立即申请"
         android:textColor="@color/colorAccent"
         android:textSize="12sp"
         app:layout_constraintEnd_toEndOf="@+id/viewLine"
         app:layout_constraintTop_toTopOf="@+id/iv_title" />

     <View
         android:id="@+id/view3"
         android:layout_width="0.5dp"
         android:layout_height="35dp"
         android:background="@color/white"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="@+id/tv_money_limit" />

     <TextView
         android:id="@+id/textView10"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="2dp"
         android:layout_marginBottom="13dp"
         android:text="可贷额度(元)"
         android:textColor="@color/color_9A9A9A"
         android:textSize="12sp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintStart_toStartOf="@+id/tv_money_limit"
         app:layout_constraintTop_toBottomOf="@+id/tv_money_limit"
         app:layout_goneMarginTop="@dimen/width_2dp" />

     <TextView
         android:id="@+id/textView11"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/width_4dp"
         android:textColor="@color/color_9A9A9A"
         android:textSize="12sp"
         app:layout_constraintEnd_toEndOf="@+id/time"
         app:layout_constraintStart_toStartOf="@+id/time"
         app:layout_constraintTop_toBottomOf="@+id/time"
         tool:text="参考通过率：" />


     <TextView
         android:id="@+id/time"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:ellipsize="end"
         android:lines="1"
         android:textColor="@color/color_666666"
         android:textSize="14sp"
         android:textStyle="bold"
         android:layout_marginEnd="@dimen/width_26dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintStart_toStartOf="@+id/guideline2"
         app:layout_constraintTop_toTopOf="@+id/view3"
         tool:text="超长贷期30天超长贷期…" />

     <TextView
         android:id="@+id/tv_money_limit"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/width_18dp"
         android:ellipsize="end"
         android:lines="1"
         tool:text="1500-100000555555555555"
         android:layout_marginRight="@dimen/width_26dp"
         android:textColor="@color/color_FF3763"
         android:textSize="16sp"
         android:textStyle="bold"
         app:layout_constraintEnd_toStartOf="@+id/guideline2"
         app:layout_constraintStart_toStartOf="@+id/iv_title"
         app:layout_constraintTop_toBottomOf="@+id/iv_title" />

     <View
         android:id="@+id/viewLine"
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:layout_marginLeft="@dimen/width_20dp"
         android:layout_marginRight="@dimen/width_20dp"
         android:background="@color/color_EAEAEA"
         app:layout_constraintBottom_toBottomOf="parent" />

     <androidx.constraintlayout.widget.Guideline
         android:id="@+id/guideline2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         app:layout_constraintGuide_percent="0.5" />
 </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

