<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_weight="1"
            android:text="其他服务费"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_14sp" />

        <TextView
            android:id="@+id/tvNameCharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:text="0.00"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_16sp" />

        <TextView
            android:id="@+id/tvNameCharge2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:text="元"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_14sp" />


        <ImageView
            android:id="@+id/ivTriangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-13dp"
            android:layout_marginEnd="15dp"
            android:src="@mipmap/ic_triangle_right"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/tvNameCharge2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvNameCharge2"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <View
        android:id="@+id/view_protect"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:background="@color/color_EAEAEA" />

    <View
        android:id="@+id/view_children"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="17dp"
        android:background="@color/color_EAEAEA"
        android:visibility="gone" />
</LinearLayout>
